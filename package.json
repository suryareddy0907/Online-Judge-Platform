{
  "name": "online-judge-platform",
  "version": "1.0.0",
  "description": "A MERN stack online judge platform",
  "main": "server/server.js",
  "scripts": {
    "client": "npm --prefix client start",
    "server": "npm --prefix server start",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run dev --prefix online-compiler\"",
    "client-install": "npm --prefix client install",
    "server-install": "npm --prefix server install",
    "install-all": "npm run client-install && npm run server-install"
  },
